<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceTitleMedium">@style/ToolbarTextAppearance</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Widget.App.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint</item>
    </style>
</resources>
